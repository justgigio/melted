{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "composite": true,
    "noEmit": true,
    "lib": ["ESNext", "dom"],
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      // "*": ["./src/types/*.d.ts"]
    }
  },
  "include": ["./src/**/*", "./tests/unit/**/*", "./tests/factories/**/*"]
}
